@model ContractMonthlyClaimSystem.Models.User
@{
    ViewData["Title"] = "Welcome Page";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Welcome to the Contract Monthly Claim System</h1>
        <p>We're glad to have you here!</p>

        @if (User.IsInRole("Lecturer"))
        {
            <p>You can submit your claims or track the status of existing claims below.</p>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Submit Claim</h5>
                            <a href="@Url.Action("Form", "Home")" class="btn btn-primary">Go to Claim Submission</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">View Claims</h5>
                            <a href="@Url.Action("Track", "Home")" class="btn btn-primary">View My Claims</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager"))
        {
            <p>You can verify submitted claims below.</p>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Verify Claims</h5>
                            <a href="@Url.Action("Verify", "Home")" class="btn btn-primary">Go to Claim Verification</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
